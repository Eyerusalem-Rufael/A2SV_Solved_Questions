class Solution:
    def setZeroes(self, matrix: List[List[int]]) -> None:
        """
        Do not return anything, modify matrix in-place instead.
        """
        row = len(matrix)
        col = len(matrix[0])
        zero_row, zero_col = set(), set()

        for i in range(row):
            for j in range(col):
                if matrix[i][j] == 0:
                    zero_row.add(i)
                    zero_col.add(j)

        for i in range(row):
            for j in range(col):
                if i in zero_row:
                    matrix[i][j] = 0
                if j in zero_col:
                    matrix[i][j] = 0
    
