class Solution:
    def findDiagonalOrder(self, mat: List[List[int]]) -> List[int]:
        dic = {}
        row = len(mat)
        col = len(mat[0])

        for i in range(row):
            for j in range(col):
                if i+j not in dic:
                    dic[i+j] = [mat[i][j]]
                else:
                    dic[i+j].append(mat[i][j])

        for key,val in dic.items():
            if key % 2 == 0: 
                val.reverse()

        return [num for value in dic.values() for num in value]   
  
        
