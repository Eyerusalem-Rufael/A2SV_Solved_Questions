class Solution:
    def removeComments(self, source: List[str]) -> List[str]:
        word = ""
        flag = False
        res = []

        for s in source:
            i = 0
            n = len(s)
            while i < n:
                if flag:
                    if i< n-1 and s[i:i+2] == "*/":
                        flag = False
                        i+=2
                    else:
                        i+=1
                else:
                    if i< n-1 and s[i:i+2] == "/*":
                        flag = True
                        i+=2
                    elif i< n-1 and s[i:i+2] == "//":
                        break
                    else:
                        word+=s[i]
                        i+=1
            if word and not flag:
                res.append(word)
                word = ""

        return res
            

