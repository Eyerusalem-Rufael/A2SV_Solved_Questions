class Solution:
    def minimumIndex(self, nums: List[int]) -> int:
        n = len(nums)
        count = Counter(nums)
        left = 0

        for key,val in count.items():
            if val * 2 > n:
                x = key
                total = val
                break
        
        for i in range(n-1):
            if nums[i] == x:
                left += 1
            right = total - left

            if left* 2 > i + 1 and right * 2 >  n - i - 1:
                return i 


        return -1
