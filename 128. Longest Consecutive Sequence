class Solution:
    def longestConsecutive(self, nums: List[int]) -> int:
        nums.sort()
        count = 1
        longest = 1
        
        if not nums:
            return 0

        for i in range(len(nums) - 1):
            if nums[i+1] - nums[i] == 1:
                count += 1
                longest = max(count,longest)

            elif nums[i+1] == nums[i]:
                continue
            
            else:
                count = 1
                
        return longest
